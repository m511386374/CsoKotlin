<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:titlebar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff3f3f9"
    android:orientation="vertical">

    <com.wuhenzhizao.titlebar.widget.CommonTitleBar
        android:id="@+id/mTitlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        titlebar:centerText="个人中心"
        titlebar:centerTextColor="@color/white"
        titlebar:centerType="textView"
        titlebar:statusBarColor="@color/blue_color_5596F7"
        titlebar:statusBarMode="light"
        titlebar:titleBarColor="@color/blue_color_5596F7" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/mRlyPersion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <cn.carbs.android.avatarimageview.library.AvatarImageView
                        android:id="@+id/mIvHeader"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_12"
                        android:layout_marginTop="@dimen/dp_20"
                        app:aiv_BoarderWidth="2dp"
                        app:aiv_ShowBoarder="false"
                        app:aiv_TextSizeRatio="0.3" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/mIvHeader"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/mTvName"
                            style="@style/TextView_14sp_999"
                            android:text="王涛波"
                            android:textColor="#ff333333"
                            android:textSize="@dimen/sp_16"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/mTvPhone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="1111111111111"
                            android:textColor="#ff666666"
                            android:textSize="@dimen/sp_13" />

                        <TextView
                            android:id="@+id/mTvCompany"
                            style="@style/TextView_14sp_333"
                            android:layout_marginTop="5dp"
                            android:text="1111111111111"
                            android:textColor="#ff666666"
                            android:textSize="@dimen/sp_13" />
                    </LinearLayout>

                </RelativeLayout>


                <TextView
                    android:id="@+id/mTvAcountManange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@color/white"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingRight="@dimen/dp_16"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:drawableRight="@mipmap/icon_arrows_gray"
                    android:textColor="@color/textView_color_f33"
                    android:textSize="@dimen/sp_14" />
                <TextView
                    android:id="@+id/mTvChangePassword"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/white"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingRight="@dimen/dp_16"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="111111"
                    android:drawableRight="@mipmap/icon_arrows_gray"
                    android:textColor="@color/textView_color_f33"
                    android:textSize="@dimen/sp_14" />

            </RelativeLayout>
            <Button
                android:id="@+id/mBtLoginOut"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_marginTop="50dp"
                android:background="@drawable/common_btn_bg"
                android:gravity="center"
                android:text="退出登录"
                android:textColor="#fff"
                android:textSize="@dimen/sp_15" />

        </LinearLayout>

    </ScrollView>
</LinearLayout>